@page "/fitnessProfile"
<PageTitle>Fitness Profile</PageTitle>
<h3>FitnessProfile</h3>

<div class=" container-fluid p-3 mb-2 bg-success text-white">
    <div class="mb-3">
        <label for="FormControlInput1" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="FormCont1olInput3" placeholder="full name">
    </div>

    <div class="mb-3">
        <label for="FormControlInput2" class="form-label">Email address</label>
        <input type="email" class="form-control" id="FormControlInput2" placeholder="name@example.com">
    </div>

    <div class="mb-3">
        <label for="FormControlInput3" class="form-label">Age</label>
        <input type="number" class="form-control" id="FormControlInput3" placeholder="age">
    </div>

    <div class="mb-3">
        <label for="FormControlInput4" class="form-label">Gender</label>
        <select class="form-select form-select-lg mb-3" aria-label="Gender Select">
            <option selected>Gender</option>
            <option value="1">Male</option>
            <option value="2">Female</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="FormControlInput5" class="form-label">Height</label>
        <input type="text" class="form-control" id="FormControlInput5" placeholder="Height">
    </div>

  <div class="mb-3">
    <label for="FormControlInput6" class="form-label">Weight</label>
    <input type="text" class="form-control" id="FormControlInput6" placeholder="Weight">
  </div>

   <div class="mb-3">
    <label for="FormControlInput7" class="form-label">Goal</label>
        <select class="form-select form-select-lg mb-3" aria-label="Goal Select">
            <option selected>Choose...</option>
            <option value="1">Build Muscle Mass</option>
            <option value="2">Improve Cardiovascular Endurance</option>
            <option value="3">Lose Weight</option>
            <option value="4">Improve Joint Health</option>
            <option value="4">Enhance Mental Health</option>

        </select>
   </div>

</div>

<div class="form gap-3">
    <div class=" p-2">
        <button type="button" class="btn btn-primary position-relative">
            <a class="btn btn-back link-back" href="#" role="button">Back</a>

        </button>

    </div>
    <div class="p-2 ">
        <button type="button" class="btn btn-primary position-relative">
            <a class="btn btn-submit link-submit " href="#" role="button">Submit</a>

        </button>

    </div>
</div>

